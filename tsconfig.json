{
  "compilerOptions": {
  	"module": "commonjs",
    "types": ["reflect-metadata"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./build/",
    "rootDir": "./src",
    "baseUrl": "./",
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "*": ["types/*"]
    },
    "lib": [
      "es2016",
      "dom",
      "es5"
    ]
  },
  "exclude": ["**/*.test.ts", "**/migrations", "./knexfile.ts", "node_modules"]
}